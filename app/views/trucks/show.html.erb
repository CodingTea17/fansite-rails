<h1><%= @truck.make + ", " + @truck.model %></h1>
<h3><%= @truck.year %></h3>
<h4><%= @truck.author %> added this truck to the database</h4>
<%= link_to "Edit Truck", edit_truck_path, :class => "btn btn-warning mb-1" %>
<%= link_to "Delete Truck", truck_path(@truck),
    :class => "btn btn-danger mb-1",
    :data => {:confirm => "Are you sure?",
                :method => "delete"}%>
<%= image_tag @truck.link, :class => "img-fluid"%>

<% if @truck.comments.any? %>
  <ul>
    <% @truck.comments.each do |comment| %>
      <li>
        <%= comment.comment %>
        <%= comment.author %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no comments yet!</p>
<% end %>

<p><%= link_to "Add a comment", new_truck_comment_path(@truck) %></p>
